

<div class="flex flex-wrap items-center justify-between">
  <div class="w-full lg:w-1/2">
    <h1 class="text-2xl">Users</h1>
  </div>

  <div class="w-full lg:w-1/2 lg:text-right">
    <%= link_to new_user_path, class: 'btn btn-default' do %>
      Add New User
    <% end %>
  </div>
</div>

<table class="w-full max-w-full mb-1 bg-transparent border-collapse">
  <thead>
    <tr>
      
        <th class="border-2">Name</th>
      

              <th class="border-2">Email</th>
              <th class="border-2">Hired</th>
            
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <%= content_tag :tr, id: dom_id(user), class: dom_class(user) do %>
        
          <td class="border-2"><%= link_to user.name, user, class: "btn btn-link" %></td>
        

                  <td class="border-2">
            <% if User.reflect_on_all_associations(:belongs_to).map{|e| e.name}.include?(:email) %>
            <%= link_to user.try(:email).short_name, user.try(:email),class: "btn btn-link"  %>
            <% else %>
            <%= user.email %>
            <% end %>
          </td>
                  <td class="border-2">
            <% if User.reflect_on_all_associations(:belongs_to).map{|e| e.name}.include?(:hired) %>
            <%= link_to user.try(:hired).short_name, user.try(:hired),class: "btn btn-link"  %>
            <% else %>
            <%= user.hired %>
            <% end %>
          </td>
        
        
        <% end %>
        <% end %>
      </tbody>
    </table>


